{
    "eslint.enable": true,
    "eslint.useFlatConfig": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact"
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "always",
        "source.organizeImports": "always",
        "source.sortImports": "always",
    },
    "editor.formatOnSave": true,
  
}